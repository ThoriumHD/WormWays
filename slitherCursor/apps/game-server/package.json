{
  "name": "@apps/game-server",
  "version": "0.1.0",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "concurrently -n proto,server \"pnpm --filter @packages/proto dev\" \"nodemon --watch src --ext ts --exec ts-node --esm --transpile-only src/index.ts\"",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "lint": "eslint . --ext .ts --max-warnings 0",
    "format": "prettier -w ."
  },
  "dependencies": {
    "ws": "^8.18.0",
    "@packages/proto": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^22.7.4",
    "@types/ws": "^8.5.12",
    "nodemon": "^3.1.7",
    "ts-node": "^10.9.2"
  }
}


