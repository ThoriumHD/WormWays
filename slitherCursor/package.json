{
  "name": "slither-monorepo",
  "private": true,
  "version": "0.1.0",
  "packageManager": "pnpm@9.11.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently -c green,cyan,magenta -n game-server,api,client \"pnpm --filter @apps/game-server dev\" \"pnpm --filter @apps/api dev\" \"pnpm --filter @apps/client dev\"",
    "build": "pnpm -r build",
    "lint": "pnpm -r lint",
    "format": "pnpm -r format",
    "test": "pnpm -r test"
  },
  "devDependencies": {
    "@types/node": "^22.7.4",
    "concurrently": "^9.0.1",
    "eslint": "^9.11.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^17.10.3",
    "eslint-plugin-promise": "^7.1.0",
    "prettier": "^3.3.3",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vitest": "^2.1.3"
  },
  "dependencies": {
    "pixi.js": "^8.3.4"
  }
}
